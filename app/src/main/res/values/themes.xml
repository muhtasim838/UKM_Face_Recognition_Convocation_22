<resources>
    <!-- Base application theme. -->
    <style name="Theme.HadirUKM" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_200</item>
        <item name="colorPrimaryVariant">@color/light_blue_200_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/light_blue_200</item>
        <item name="android:fontFamily">@font/inter</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HadirUKM.Splash" parent="Theme.HadirUKM">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/light_blue_200_light</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. # Required -->
        <item name="postSplashScreenTheme">@style/Theme.HadirUKM</item>
    </style>

    <!-- Customize your theme here. -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>